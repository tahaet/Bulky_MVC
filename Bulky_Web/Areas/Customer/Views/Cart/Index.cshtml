@model ShoppingCartVM

<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Shopping Cart
					</div>
					<div class="col-6 text-end">
						<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in Model.ShoppingCarts){
				<div class="row">
					<div class="d-none d-lg-block col-lg-1 text-center py-2">
						<img src="@item.Product.ImageUrl" class="rounded" width="100%" />
					</div>
					<div class="col-12 col-lg-6 pt-md-3">
						<h5><strong>@item.Product.Title</strong></h5>
						<p><small>@Html.Raw(item.Product.Description)</small></p>
					</div>
					<div class="col-12  col-lg-5 text-center row">
						<div class="col-4 text-md-right pt-4">
							<h6><strong>@item.Price.ToString("c")
								<span class="text-muted">&nbsp;x&nbsp;</span>@item.Count </strong></h6>
						</div>
						<div class="col-6 col-sm-4 col-lg-6 pt-2">
							<div class="w-75 btn-group" role="group">
									<a asp-action="plus"asp-controller="Cart" asp-area="Customer"  asp-route-cartId="@item.Id" class="btn btn-primary">
									<i class="bi bi-plus-square"></i>
								</a> &nbsp;
									<a asp-action="minus"asp-controller="Cart" asp-area="Customer"  asp-route-cartId="@item.Id" class="btn btn-warning">
									<i class="bi bi-dash-square"></i>
								</a>
							</div>

						</div>
						<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
							<a asp-action="remove" asp-controller="Cart" asp-area="Customer" asp-route-cartId="@item.Id" class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</div>
				</div>
				<hr />
				}
				 <div class="card-footer bg-white border-0">
				<div class="row">
					<div class="col-md-4 offset-md-4">
						<ul class="list-group mb-4">
							<li class="d-flex justify-content-between align-items-center">
								<h5 class="text-dark fw-semibold text-uppercase"> Total (USD)</h5>
								<h4 class="text-dark fw-bolder">@Model.OrderHeader.OrderTotal.ToString("c")</h4>
							</li>
						</ul>
					</div>
				</div>
				<div class="row">
					<div class="col-md-2 offset-md-5">
						<a  asp-action="Summary" asp-area="Customer" asp-controller="Cart" class="btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
					</div>
				</div>
			</div>
		</div>

		</div>
	</div>
</form>
@page
@model BulkyWeb_Razor.Pages.Categories.DeleteModel
 

<form method="POST" >
	<input asp-for="Category.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr/>
		</div>
		<div class="mb-3 row" p-1>
			<label asp-for ="Category.Name" class="p-0"></label>
			<input asp-for ="Category.Name" class="form-control" disabled/>
			<span class="text-danger" asp-validation-for="Category.Name"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for ="Category.DisplayOrder" class="p-0"></label>
			<input asp-for ="Category.DisplayOrder" class="form-control" disabled/>
			<span class="text-danger" asp-validation-for="Category.DisplayOrder"></span>

		</div>
		<div class="row">
			<div class="col-6 col-ms-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-ms-3">
				<a asp-page="/categories/Index" class="btn btn-secondary border form-control">Back To List</a>
			</div>
		</div>
	</div>
</form>
